@model IEnumerable<BL.Models.Book>

    <h3 class="text-center">Available books</h3>
<hr />
@if (Model.Count() == 0)
{
    <div class="alert alert-success text-center">
        <h5>There are no books currently available for this customer</h5>
    </div>
}
else
{
    <table class="table table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        <button id="return" onclick="Borrow(@item.Id)" class="btn btn-success">Borrow the book</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>  
    }