@model IEnumerable<BL.Models.BorrowedBooks>

    <h3 class="text-center">Borrowed books</h3>
<hr />
@if (Model.Count() == 0)
{
    <div class="alert alert-success text-center">
        <h5>This customer has not borrowed any books yet</h5>
    </div>
}
else
{
    <table class="table text-center table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Author)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Author)
                    </td>
                    <td>
                        <button id="return" onclick="save(@item.Id)" class="btn btn-danger">Return the book</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
